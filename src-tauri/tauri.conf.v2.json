{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lumene",
  "version": "1.0.0",
  "identifier": "com.lumene.app",
  "build": {
    "devUrl": "https://vitorgravity.lovable.app/",
    "distDir": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Lumene",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "shortcut": false
      },
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {}
}

