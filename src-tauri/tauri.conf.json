{
  "build": {
    "devPath": "https://vitorgravity.lovable.app/",
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Lumene",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://vitorgravity.lovable.app/**"]
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["nsis", "msi", "dmg"],
      "identifier": "com.lumene.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "wix": {
          "language": "en-US",
          "enableElevatedUpdateTask": false
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Lumene",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ]
  }
}
